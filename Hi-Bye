import org.apache.commons.lang3.StringUtils;

public class HiBye extends botLogic{
	StringUtils su = new StringUtils();
	
	public HiBye() {
		System.out.println("LoveBot: Hello there. Iâ€™m your friendly assistant Love Bot and I give dating advice." + "\n" + "What is your first and last name?");
	}
	public void name(String s) {
		botSay("Hello " + su.substringBeforeLast(s, " ") + ". How can I help you?");
	}
	public void greet() {
			botSay("Hey there! How can I help you?");
	}
	public void endChat() {
		botSay("Goodbye!");
		System.exit(0);
	}
}
